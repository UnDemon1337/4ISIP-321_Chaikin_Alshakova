<Page x:Class="TechnoServise.Pages.AuthorizePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TechnoServise.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizePage" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
            
        </Grid.ColumnDefinitions>

        <Label Content="Логин" Style="{StaticResource AddLabel}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Label Content="Пароль" Style="{StaticResource AddLabel}" Grid.Column="1" Margin="0,5,10,0" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <TextBox x:Name="Login" Style="{StaticResource AddTextBox}" Width="100" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        <PasswordBox x:Name="Password" Style="{StaticResource CustomPasswordBox}" Margin="10,10,0,0" Width="100" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="Enter" Content="Войти" Style="{StaticResource CustomButton}"
                Grid.Column="2" Grid.Row="2" Width="100"
                Click="Enter_Click"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"/>
    </Grid>
</Page>
